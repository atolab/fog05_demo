<domain type="kvm">
    <name>mirages</name>
    <uuid>61186de0-c833-43d8-9b88-525d58ac4cc2</uuid>
    <memory unit="MB">512</memory>
    <vcpu placement="static">1</vcpu>
    <os>
        <type>hvm</type>
        <boot dev="hd"/>
    </os>
    <features>
        <acpi/>
        <apic/>
        <pae/>
